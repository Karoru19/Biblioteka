<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="100.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.login.Controller">
    <VBox alignment="CENTER" maxHeight="100.0" maxWidth="309.0" minHeight="100.0" minWidth="250.0" prefHeight="100.0" prefWidth="309.0">
        <TextField prefHeight="21.0" prefWidth="187.0" promptText="login" />
        <PasswordField promptText="Password" />
      <CheckBox contentDisplay="CENTER" mnemonicParsing="false" prefWidth="1000.0" text="Anonymous login" />
      <VBox.margin>
         <Insets left="10.0" right="10.0" />
      </VBox.margin>
    </VBox>
    <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0">
        <Button onAction="#handleLoginButtonAction" text="Log in" />
        <Button cancelButton="true" onAction="#handleCancelButtonAction" text="Cancel" />
        <Button onAction="#handleSignupButtonAction" text="Sign up" />
      <padding>
         <Insets bottom="10.0" left="10.0" right="10.0" />
      </padding>
    </HBox>
</VBox>
